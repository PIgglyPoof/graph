#include <stdio.h>
#include <stdlib.h>
int a[100];
int n;
void maxheapify(int i, int n)
{
	int temp, largest, left, right;
	left = (2 * i + 1);
	right = ((2 * i) + 2);
	if (left >= n)
		return;
	else {
		if (left < n && a[left] > a[i])
			largest = left;
		else
			largest = i;
		if (right < n && a[right] > a[largest])
			largest = right;
		if (largest != i) {
			temp = a[i];
			a[i] = a[largest];
			a[largest] = temp;
			maxheapify(largest, n);
		}
	}
}
int main()
{
	int i;
	printf("Enter no of elements in heap: ");
	scanf("%d", &n);
	printf("Enter elements\n");
	for (i = 0; i < n; i++) {
		scanf("%d", &a[i]);
	}
	for (i = n / 2; i >= 0; i--) {
		maxheapify(i, n);
	}
	printf("Heap: \n");
	for (i = 0; i < n; i++) {
		printf("%d\n", a[i]);
	}
	return 0;
}
